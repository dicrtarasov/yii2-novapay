{
    "name": "dicr/yii2-novapay",
    "type": "yii2-extension",
    "license": "MIT",
    "homepage": "https://gitlab.com/dicr/yii2-novapay",
    "description": "API NovaPay для Yii2",
    "keywords": ["dicr", "yii2", "payment", "novapay"],
    "authors": [
        {
            "name": "Igor Tarasov",
            "email": "develop@dicr.org",
            "homepage": "http://dicr.org",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/dicr/yii2-novapay.git"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~7.4 || ~8.0.1",
        "ext-openssl": "*",

        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-httpclient": "~2.0",

        "dicr/yii2-json": "~2.0",
        "dicr/yii2-helper": "~4.0",
        "dicr/yii2-validate": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "dicr\\novapay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dicr\\tests\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "~9.5"
    },
    "repositories": [
        {"type": "composer", "url": "https://asset-packagist.org"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-json.git"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-helper.git"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-validate.git"}
    ]
}
